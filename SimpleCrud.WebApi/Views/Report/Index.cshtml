<div class="col-md-12">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">List</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <a onclick="showInPopup('@Url.Action("Search","Report",null,Context.Request.Scheme)','Search')" class="btn btn-success text-white"><i class="fas fa-search"></i>&nbsp; Search</a>
            </div>
            <div id="view-all" class="form-group">
                @Html.AjaxGrid(Url.Action("Index"))
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="form-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

